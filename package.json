{
  "name": "nestboard",
  "version": "1.0.1",
  "description": "NestBoard is a package that allows you to easily create CRUD APIs through a dashboard. With this package, you can quickly generate code for creating, reading, updating, and deleting records in your database. In addition to CRUD APIs, the package also provides dashboard features for managing and organizing all of your APIs. NestBoard is built on top of Swagger documentation, which means that it uses the Swagger API specification to generate and manage your API code. This allows you to easily modify and customize your APIs through a web-based dashboard without needing to manually edit any code.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc && cp src/controls/templates/*.hbs dist/controls/templates"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/basil-github/nestboard"
  },
  "bugs": {
    "url": "https://github.com/basil-github/nestboard/issues"
  },
  "keywords": [
    "nestjs",
    "dashboard",
    "CRUD",
    "sequelize",
    "sql"
  ],
  "author": "beacel.in <beacel.in>",
  "license": "ISC",
  "peerDependencies": {
    "@nestjs/common": "^9.4.0"
  },
  "devDependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/sequelize": "^9.0.2",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.17",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "cpy": "^9.0.1",
    "jest": "^29.5.0",
    "rxjs": "^7.5.5",
    "sequelize": "^6.31.0",
    "sequelize-typescript": "^2.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
